<?xml version="1.0" encoding="utf-8"?>
<!-- #FF8300 = orange, #689a92 = gray, #DD7500 = darker orange -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FF8300" /> 
         <gradient android:angle="-90" android:startColor="#689a92" android:endColor="#FF8300"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FF8300" />
         <solid android:color="#DD7500"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FF8300" />
         <gradient android:angle="-90" android:startColor="#DD7500" android:endColor="#FF8300" />            
     </shape>
 </item>
</selector>